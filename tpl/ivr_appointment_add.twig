{##
 # ivr_appointment_add.twig
 # 
 # Form for creating new IVR appointments.
 # @author Patrick Emond <emondpd@mcmaster.ca>
 # @see base_add.twig for parameters
 #}
{% extends "base_add.twig" %}

{% block javascript %}

  <script type="text/javascript">
    $( function () {
      // add button
      $( "#{{ widget.compound }}_add" ).click( function () {
        // push the form information
        var args = new Object();
        var columns = new Object();
        $( "#{{ widget.full }}_add_form :input" ).each( function() {
          var id_string = $(this).prop( "id" );
          var column_name = id_string.substring( id_string.lastIndexOf('__') + 2 );
          if( "checkbox" != $(this).prop( "type" ) )
            columns[column_name] = $(this).val();
          else args.force = $(this).is( ":checked" ) ? 1 : 0;
        } );
        args.columns = columns;
    
        if( ajax_push( "{{ widget.subject }}", "new", args ) ) slot_prev_clip( {{ slot }} );
      } );
    } );
  </script>

{% endblock javascript %}

{% block record %}
  
  {{ parent() }}
  {% from 'macros.twig' import include_calendar %}
  {{ include_calendar( 'ivr_appointment', calendar|default(false), true ) }}

{% endblock record %}
