{% extends "base_view.twig" %}

{% block record %}

  {{ parent() }}
  {% from 'macros.twig' import include_list %}
  {{ include_list( 'shift', shift_list|default(false), true ) }}
  {{ include_list( 'access', access_list|default(false), true ) }}
  {{ include_list( 'activity', activity_list|default(false), true ) }}

{% endblock record %}

{% block post_edit %}
  // reload page after editing the postcode to update the timezone, daylight savings and region
  if( "postcode" == column_name ) slot_refresh( {{ slot }} );
{% endblock post_edit %}
